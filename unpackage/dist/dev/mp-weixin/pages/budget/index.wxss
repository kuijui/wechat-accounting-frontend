
.budget-container.data-v-beadd351 {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 顶部 */
.header.data-v-beadd351 {
  margin-bottom: 20rpx;
}
.month-bar.data-v-beadd351 {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.month-text.data-v-beadd351 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 0 40rpx;
}
.arrow.data-v-beadd351 {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx 20rpx;
}
.overview.data-v-beadd351 {
  display: flex;
  justify-content: space-between;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
}
.overview-item.data-v-beadd351 {
  display: flex;
  flex-direction: column;
}
.overview-label.data-v-beadd351 {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 6rpx;
}
.overview-total.data-v-beadd351 {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}
.overview-used.data-v-beadd351 {
  font-size: 28rpx;
  color: #ff9f43;
  font-weight: 600;
}
.overview-remaining.data-v-beadd351 {
  font-size: 28rpx;
  color: #07c160;
  font-weight: 600;
}

/* 内容 */
.content.data-v-beadd351 {
  margin-top: 20rpx;
}
.loading.data-v-beadd351 {
  text-align: center;
  color: #999;
  padding: 60rpx 0;
}
.empty.data-v-beadd351 {
  padding: 80rpx 0;
  text-align: center;
}
.empty-icon.data-v-beadd351 {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}
.empty-text.data-v-beadd351 {
  font-size: 26rpx;
  color: #999;
}
.list-scroll.data-v-beadd351 {
  max-height: calc(100vh - 320rpx);
}
.budget-item.data-v-beadd351 {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
}
.budget-header.data-v-beadd351 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.budget-name.data-v-beadd351 {
  font-size: 28rpx;
  color: #333;
}
.budget-percent.data-v-beadd351 {
  font-size: 24rpx;
  color: #666;
}
.budget-amount-row.data-v-beadd351 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.amount-text.data-v-beadd351 {
  font-size: 22rpx;
  color: #666;
}
.amount-text.warning.data-v-beadd351 {
  color: #ff4d4f;
}
.progress-bar.data-v-beadd351 {
  width: 100%;
  height: 14rpx;
  background: #f0f0f0;
  border-radius: 7rpx;
  overflow: hidden;
}
.progress-inner.data-v-beadd351 {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}
.progress-inner.over.data-v-beadd351 {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%);
}
