
.login-container.data-v-e4e4508d {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 60rpx;
}

/* 背景装饰 */
.bg-decoration.data-v-e4e4508d {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}
.circle.data-v-e4e4508d {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float-e4e4508d 6s ease-in-out infinite;
}
.circle-1.data-v-e4e4508d {
  width: 200rpx;
  height: 200rpx;
  top: 10%;
  right: 10%;
  animation-delay: 0s;
}
.circle-2.data-v-e4e4508d {
  width: 150rpx;
  height: 150rpx;
  bottom: 20%;
  left: 10%;
  animation-delay: 2s;
}
.circle-3.data-v-e4e4508d {
  width: 100rpx;
  height: 100rpx;
  top: 50%;
  left: 20%;
  animation-delay: 4s;
}
@keyframes float-e4e4508d {
0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.7;
}
50% {
    transform: translateY(-20px) rotate(180deg);
    opacity: 1;
}
}

